# Maintainer: Erdal Mutlu <erdal@sisiya.org>
pkgname=sisiyad
pkgver=__VERSION__
pkgrel=__RELEASE__
epoch=
pkgdesc="The SisIYA daemon."
arch=('i686' 'x86_64')
url="http://www.sisiya.org"
license=('GPL2')
groups=()
depends=('perl')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("$pkgname-$pkgver-$pkgrel.tar.gz")
noextract=()
md5sums=('__MD5SUM__') #generate with 'makepkg -g'

build() {
	cd "$srcdir/$pkgname-$pkgver-$pkgrel"
	./bootstrap create
	./configure
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver-$pkgrel"
#	cd "$srcdir/$pkgname-$pkgver-$pkgrel/sisiyad"
	make "DESTDIR=$pkgdir" install
#	cd ..
	install -d -m 755 $pkgdir/etc/systemd/system
	install -m m 644 etc/sisiyad_systemd $pkgdir/etc/systemd/system/sisiyad.service
}

